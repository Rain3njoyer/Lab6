@startuml

actor HR as "HR Advisor"
actor Manager as "Department Manager"

rectangle "HR System" {
    usecase UC1 as "Produce report on salary of all employees"
    usecase UC2 as "Produce report on salary of employees in a department"
    usecase UC3 as "Produce report on salary of employees by role"
    usecase UC4 as "Add a new employee"
    usecase UC5 as "View employee record"
    usecase UC6 as "Update employee record"
    usecase UC7 as "Delete employee record"
}

HR --> UC1
HR --> UC2
HR --> UC3
HR --> UC4
HR --> UC5
HR --> UC6
HR --> UC7
Manager --> UC2
Manager --> UC5

@enduml
